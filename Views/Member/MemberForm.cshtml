@{
    ViewData["Title"] = "Join a Gift Exchange";
}
@model ValidateGroupCode
<div>
    @await Html.PartialAsync("_Navbar")

    <h3 class="header">Join a Gift Exchange</h3>

    <div class="text-center">
        <a type="button" class="smBtn" asp-action="Dashboard" asp-controller="GiftExchange"><small>Return to Dashboard</small></a>
    </div>

    <hr class="line w-25 m-auto">

    <form class="m-3" asp-action="CreateMember" asp-controller="Member" method="post">

        <div class="formItem">
            <label asp-for="VGiftExchangeId"></label>
            <select asp-for="VGiftExchangeId" class="form-control">

                <option disabled selected value="">Select a Gift Exchange</option>

                @foreach(GiftExchange g in ViewBag.AllGiftExchanges)
                {
                <option value=@g.GiftExchangeId>@g.Name</option>
                }
            </select>
            <span asp-validation-for="VGiftExchangeId" class="text-danger"></span>
        </div>

        <div class="formItem">
            <label asp-for="VGroupCode"></label>
            <input asp-for="VGroupCode" class="form-control">
            <span asp-validation-for="VGroupCode" class="text-danger"></span>
        </div>
        <div class="text-center">
            <button class="lgBtn btn" type="submit">Join Gift Exchange!</button>
        </div>

    </form>

</div>