@{
    ViewData["Title"] = "Edit Gift Exchange";
}
@model GiftExchange
<div>
    @await Html.PartialAsync("_Navbar")

    <h1 class="text-center">Edit this Gift Exchange</h1>
    
    <div class="text-center">
        <a type="button" class="btn text-primary text-decoration-underline" asp-action="OneGiftExchange" asp-controller="GiftExchange" asp-route-GiftExchangeId=@Model.GiftExchangeId><small>Return to @Model.Name Gift Exchange</small></a>
    </div>

    <form asp-action="UpdateGiftExchange" asp-controller="GiftExchange" asp-route-GiftExchangeId=@Model.GiftExchangeId method="post">

        <div class="m-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="m-3">
            <label asp-for="GroupCode"></label>
            <input asp-for="GroupCode" class="form-control">
            <span asp-validation-for="GroupCode" class="text-danger"></span>
        </div>

        <div class="m-3">
            <label asp-for="Budget"></label>
            <input asp-for="Budget" class="form-control">
            <span asp-validation-for="Budget" class="text-danger"></span>
        </div>
        
        <div class="m-3">
            <label asp-for="ExchangeDate"></label>
            <input asp-for="ExchangeDate" class="form-control">
            <span asp-validation-for="ExchangeDate" class="text-danger"></span>
        </div>

        <div class="m-3">
            <label asp-for="Details"></label>
            <textarea asp-for="Details" class="form-control"></textarea>
            <span asp-validation-for="Details" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="UserId" value=@Context.Session.GetInt32("UserId") >

        <div class="d-flex justify-content-center">
            <div class="text-center">
                <button type="submit">Update</button>
            </div>
            
        </div>
        
        
    </form>
</div>