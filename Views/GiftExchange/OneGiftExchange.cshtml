@{
    ViewData["Title"] = "Gift Exchange Details";
}
@model MyViewModel
<div>
    @await Html.PartialAsync("_Navbar")
    
    <div class="text-center">
        <h3 class="header">The <span class="glow">@Model.GiftExchange.Name</span> Gift Exchange</h3 class="header">
        @if(Model.GiftExchange.UserId == Context.Session.GetInt32("UserId"))
        {
        <a class="smBtn" href="/GiftExchanges/@Model.GiftExchange.GiftExchangeId/edit">
            Edit Gift Exchange
        </a>
        }
        <hr class="line w-50 m-auto">
    </div>
    

    <div class="d-flex justify-content-center m-5">
        <div class="list mx-5">
            <h3>Members</h3>
            @foreach (Member m in Model.GiftExchange.MemberList)
            {
                <a class="btn listItem" asp-action="OneWishlist" asp-controller="Item" asp-route-UserId=@m.User.UserId>
                    <strong>@m.User.Username</strong> - @m.User.ItemList.Count() Item(s)
                </a>
            }
        </div>

        <div class="vLine"></div>

        <div class="text mx-5">
            <div class="details">
                <p class="dheader">Details</p class="dheader">
                <p class="">@Model.GiftExchange.Details</p>
            </div>
            
            <div class="details">
                <p class="dheader">Budget</p class="dheader">
                <p>$@Model.GiftExchange.Budget</p>
            </div>

            <div class="details">
                <p class="dheader">Exchange Date</p class="dheader">
                <p>@Model.GiftExchange.ExchangeDate.ToString("MMMM dd, yyyy")</p>
            </div>        
        </div>
    </div>

</div>
