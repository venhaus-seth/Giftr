<div class="d-flex justify-content-around m-4">
    <div class="d-flex">
        <img src="~/logoWithNewFont_Montserrat.png" alt="Giftr logo" class="navlogo">
        <h6 class="d-flex align-items-end m-4 text">Logged in as <span class="mx-2 glow"> @Context.Session.GetString("Username")</span></h6>
    </div>
    
    <div>
        <a class="m-3 btn lgBtn navtext" asp-action="OneWishList" asp-controller="Item" asp-route-UserId=@Context.Session.GetInt32("UserId") ><span>Wishlist</span></a>
        <a class="m-3 btn lgBtn navtext" asp-action="Dashboard" asp-controller="GiftExchange"><span>Home</span></a>
        <a class="m-3 btn lgBtn navtext" asp-action="LogOutUser" asp-controller="Home"><span>Logout</span></a>
    </div>
</div>